<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.dexluthor.diary">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_menu_book_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_menu_book_24"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <uses-library
            android:name="com.google.android.wearable"
            android:required="false" />

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".activities.HomeworkInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AddHomeworkActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AddLessonActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.EditSubjectActivity" />
        <activity
            android:name=".activities.LessonInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.mainActivity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>