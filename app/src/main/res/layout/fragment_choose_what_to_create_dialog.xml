<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.github.dexluthor.diary.fragment.ChooseWhatToCreateDialogFragment">

    <Button
        android:id="@+id/add_homework"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/add_homework" />

    <Button
        android:id="@+id/add_lesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/add_lesson" />

    <Button
        android:id="@+id/add_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_subject" />
</LinearLayout>