<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:context=".activities.AddLessonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/subject_name"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Spinner
            android:id="@+id/day_of_week"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/time"
                android:layout_width="278dp"
                android:layout_height="50dp"
                android:hint="Time*" />

            <ImageButton
                android:id="@+id/choose_time_btn"
                android:layout_width="83dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_watch_later_24"
                android:onClick="onChooseTimeButtonClick"/>
        </LinearLayout>

        <EditText
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="Duration*" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="Location" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/date"
                android:layout_width="278dp"
                android:layout_height="50dp"
                android:hint="Until date*" />

            <ImageButton
                android:id="@+id/choose_date_btn"
                android:layout_width="81dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_calendar_today_24"
                android:onClick="onChooseDateButtonClick"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/removeLessonButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/basicDark"
                android:onClick="removeLesson"
                android:text="@string/remove"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/saveLessonButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@color/basicDark"
                android:onClick="saveLesson"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>